<!DOCTYPE html>
<html lang="en">
{{> head}}

<body>

  {{> navbar}}
  <!-- search area -->

  <!-- end search arewa -->

  <!-- breadcrumb-section -->
  <div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2 text-center">
          <div class="breadcrumb-text">
            <p>Checkout your orders!</p>
            <h1>My Orders</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end breadcrumb section -->

  <div class="row">
    {{#each orders }}

    <div class="col-lg-4 col-md-6 text-center">
      <div class="single-product-item">
        <div class="product-image">
          <a href="/food/{{ this.orderDetails.food.0._id }}"><img src="{{ this.orderDetails.food.0.image }}" alt=""
              height="200px"></a>
        </div>
        <h3>{{ this.orderDetails.food.0.name }}</h3>
        {{#if this.orderDetails.food.0.isVeg }}
        <h3>
          <span class="badge badge-success">Veg</span>
        </h3>
        {{else}}
        <h3>
          <span class="badge badge-danger">Non-Veg</span>
        </h3>
        {{/if}}
        <p class="product-price">â‚¹{{ this.orderDetails.price }}</p>
        <p class="product-price">{{ this.orderDetails.quantity }}</p>
        <p class="product-price">{{splitDate this.createdAt }}</p>
        <form action="/cart/add/{{this.orderDetails.food.0._id}}" method="post">

          <button type="submit" class="button button1"><i class="fas fa-shopping-cart"></i>
            Add to Cart</button>
            <style>
.button {
  background-color: #ff7300;
  border: none;
  border-radius:16px;
  color: white;
  padding: 8px 16px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  margin: 4px 2px;
  transition-duration: 0.4s;
  cursor: pointer;
}

.button1:hover {
  background-color: white; 
  color: #ff7300; 
  border: 2px solid #ff7300;
}

.button1 {
  background-color: #ff7300;
  color: white;
}
</style>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
  </div>
  </div>
  <!-- testimonail-section -->
  {{> testimonail}}
  <!-- end testimonail-section -->



  {{> footer}}
  <!-- jquery -->
  {{> script}}

</body>

</html>